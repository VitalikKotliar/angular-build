{
  "root": true,
  "extends": "airbnb/base",
  "env": {
    "browser": true,
    "mocha": true,
    "es6": true
  },
  "globals": {
    "angular": true,
    "beforeEach": true,
    "afterEach": true,
    "it": true,
    "describe": true,
    "context": true,
    "env": true
  },
  "rules": {
    //Best practices
    "max-len": [2, 120, 4, {"ignoreUrls": true, "ignorePattern": "^(import|export).*$"}],

    //Errors
    "comma-dangle": [2, "never"],

    //ES6
    "no-var": 1,
    "prefer-const": 0,

    //Strict
    "strict": [1, "function"],

    //Style
    "indent": [2, 4],
    "func-names": [0],
    "new-cap": [2, {"capIsNewExceptions": ["express.Router"]}],
    "space-before-function-paren": [2, { "anonymous": "always", "named": "never" }],
    "arrow-body-style": 0,
    "linebreak-style": 0,

    //Variables
    "no-use-before-define": 0,
    "no-unused-expressions": 0,
    "no-undef": 0,
    "no-shadow": 1
  }
}
